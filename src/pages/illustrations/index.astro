---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Illustrations Portfolio">
	<section class="page-header">
		<h1>Illustrations</h1>
	</section>

	<section class="gallery">
		<div class="gallery-grid">
			<a href="/illustrations/digital-art" class="gallery-item">
				<div class="slideshow">
					<img src="/images/digital art/July_23_2022.PNG" alt="Digital Art" class="slide" />
					<img src="/images/digital art/IMG_5625.PNG" alt="Digital Art" class="slide" />
					<img src="/images/digital art/IMG_4257.PNG" alt="Digital Art" class="slide" />
				</div>
				<h3>Digital Art</h3>
			</a>
			<a href="/illustrations/traditional" class="gallery-item">
				<div class="slideshow">
					<img src="/images/traditional/traditional-4.jpg" alt="Traditional Art" class="slide" />
					<img src="/images/traditional/IMG_2503.jpg" alt="Traditional Art" class="slide" />
					<img src="/images/traditional/traditional-8.jpg" alt="Traditional Art" class="slide" />
				</div>
				<h3>Traditional</h3>
			</a>
			<a href="/illustrations/sketchbook" class="gallery-item">
				<div class="slideshow">
					<img src="/images/sketchbook/IMG_4296_2.jpg" alt="Sketchbook" class="slide" />
					<img src="/images/sketchbook/IMG_2251.jpg" alt="Sketchbook" class="slide" />
					<img src="/images/sketchbook/IMG_1422.jpg" alt="Sketchbook" class="slide" />
				</div>
				<h3>Sketchbook</h3>
			</a>
		</div>
	</section>
</Layout>

<style>
	.page-header {
		text-align: center;
		padding: 4rem 2rem;
		background-color: var(--secondary-background);
		margin: -2rem -2rem 2rem -2rem;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	.subtitle {
		font-size: 1.25rem;
		color: #4b5563;
	}

	.gallery {
		padding: 2rem 0;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.gallery-item {
		position: relative;
		overflow: hidden;
		transition: transform 0.2s;
		height: 300px;
		text-decoration: none;
		display: block;
	}

	.gallery-item:hover {
		transform: translateY(-5px);
	}

	.image-placeholder {
		height: 100%;
		background-color: #e5e7eb;
		background-image: linear-gradient(45deg, #f3f4f6 25%, transparent 25%),
			linear-gradient(-45deg, #f3f4f6 25%, transparent 25%),
			linear-gradient(45deg, transparent 75%, #f3f4f6 75%),
			linear-gradient(-45deg, transparent 75%, #f3f4f6 75%);
		background-size: 20px 20px;
		background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
	}

	.slideshow {
		height: 100%;
		position: relative;
		overflow: hidden;
		background-color: #000;
	}

	.slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		opacity: 0;
		transition: opacity 1s ease-in-out, filter 0.3s ease-in-out;
		background-color: #000;
		filter: grayscale(100%);
	}

	.slide:first-child {
		opacity: 1;
	}

	.gallery-item:hover .slide {
		filter: grayscale(0%);
	}

	.gallery-item h3 {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		padding: 1.5rem;
		margin: 0;
		color: white;
		font-size: 1.25rem;
		width: 100%;
		text-align: center;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
		z-index: 1;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	// Slideshow functionality
	function initSlideshow() {
		const slideshows = document.querySelectorAll('.slideshow');
		
		slideshows.forEach(slideshow => {
			const slides = slideshow.querySelectorAll('.slide');
			let currentSlide = 0;
			
			function nextSlide() {
				slides[currentSlide].style.opacity = '0';
				currentSlide = (currentSlide + 1) % slides.length;
				slides[currentSlide].style.opacity = '1';
			}
			
			// Start the slideshow
			setInterval(nextSlide, 3000); // Change slide every 3 seconds
		});
	}

	// Initialize slideshow when the page loads
	document.addEventListener('DOMContentLoaded', initSlideshow);
</script> 
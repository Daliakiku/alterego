---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Illustrations Portfolio">
	<section class="page-header">
		<h1>Illustrations</h1>
	</section>

	<section class="gallery">
		<div class="gallery-grid">
			<a href="/illustrations/digital-art" class="gallery-item">
				<div class="image-placeholder"></div>
				<h3>Digital Art</h3>
			</a>
			<a href="/illustrations/traditional" class="gallery-item">
				<div class="image-placeholder"></div>
				<h3>Traditional</h3>
			</a>
			<a href="/illustrations/sketchbook" class="gallery-item">
				<div class="image-placeholder"></div>
				<h3>Sketchbook</h3>
			</a>
		</div>
	</section>
</Layout>

<style>
	.page-header {
		text-align: center;
		padding: 4rem 2rem;
		background-color: var(--secondary-background);
		margin: -2rem -2rem 2rem -2rem;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	.subtitle {
		font-size: 1.25rem;
		color: #4b5563;
	}

	.gallery {
		padding: 2rem 0;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.gallery-item {
		position: relative;
		overflow: hidden;
		transition: transform 0.2s;
		height: 300px;
		text-decoration: none;
		display: block;
	}

	.gallery-item:hover {
		transform: translateY(-5px);
	}

	.image-placeholder {
		height: 100%;
		background-color: #e5e7eb;
		background-image: linear-gradient(45deg, #f3f4f6 25%, transparent 25%),
			linear-gradient(-45deg, #f3f4f6 25%, transparent 25%),
			linear-gradient(45deg, transparent 75%, #f3f4f6 75%),
			linear-gradient(-45deg, transparent 75%, #f3f4f6 75%);
		background-size: 20px 20px;
		background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
	}

	.gallery-item h3 {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		padding: 1.5rem;
		margin: 0;
		color: white;
		font-size: 1.25rem;
		width: 100%;
		text-align: center;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 
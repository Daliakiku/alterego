<style>
	.page-header {
		text-align: center;
		padding: 4rem 2rem;
		background-color: var(--secondary-background);
		margin: -2rem -2rem 2rem -2rem;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	.back-link {
		color: var(--text-color);
		text-decoration: none;
		display: inline-block;
		margin-top: 1rem;
	}

	.gallery {
		padding: 2rem 0;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.gallery-item {
		position: relative;
		overflow: visible;
		height: 300px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.gallery-item img {
		max-width: 100%;
		max-height: 100%;
		width: auto;
		height: auto;
		object-fit: contain;
		transition: transform 0.3s ease;
	}

	.gallery-item:hover img {
		transform: scale(1.05);
	}

	.gallery-item img.rotated {
		transform: rotate(90deg) !important;
		transform-origin: center center;
		width: auto;
		height: 100%;
		position: relative;
	}

	.gallery-item:hover img.rotated {
		transform: rotate(90deg) scale(1.05) !important;
	}

	.gallery-item img.rotated-left {
		transform: rotate(-90deg) !important;
		transform-origin: center center;
		width: auto;
		height: 100%;
		position: relative;
	}

	.gallery-item:hover img.rotated-left {
		transform: rotate(-90deg) scale(1.05) !important;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 
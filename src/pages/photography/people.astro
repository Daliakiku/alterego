---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="People Photography">
	<section class="page-header">
		<h1>People</h1>
		<a href="/photography" class="back-link">‚Üê Back to Photography</a>
	</section>

	<section class="gallery">
		<div class="gallery-grid">
			<div class="gallery-item">
				<img src="/images/slide1.jpg" alt="Person" />
			</div>
			<div class="gallery-item">
				<img src="/images/slide1.jpg" alt="Person" />
			</div>
			<div class="gallery-item">
				<img src="/images/slide1.jpg" alt="Person" />
			</div>
			<div class="gallery-item">
				<img src="/images/slide1.jpg" alt="Person" />
			</div>
		</div>
	</section>
</Layout>

<style>
	.page-header {
		text-align: center;
		padding: 4rem 2rem;
		background-color: var(--secondary-background);
		margin: -2rem -2rem 2rem -2rem;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	.back-link {
		color: var(--text-color);
		text-decoration: none;
		display: inline-block;
		margin-top: 1rem;
	}

	.gallery {
		padding: 2rem 0;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.gallery-item {
		position: relative;
		overflow: hidden;
		height: 300px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.gallery-item img {
		max-width: 100%;
		max-height: 100%;
		width: auto;
		height: auto;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 
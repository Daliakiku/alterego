---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Photography">
	<section class="page-header">
		<h1>Photography</h1>
	</section>

	<section class="categories">
		<div class="category-grid">
			<a href="/photography/places" class="category-card">
				<h2>Places</h2>
			</a>
			<a href="/photography/people" class="category-card">
				<h2>People</h2>
			</a>
			<a href="/photography/projects" class="category-card">
				<h2>Projects</h2>
			</a>
		</div>
	</section>
</Layout>

<style>
	.page-header {
		text-align: center;
		padding: 4rem 2rem;
		background-color: var(--secondary-background);
		margin: -2rem -2rem 2rem -2rem;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	.categories {
		padding: 2rem 0;
	}

	.category-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.category-card {
		background-color: var(--secondary-background);
		padding: 2rem;
		border-radius: 8px;
		text-align: center;
		text-decoration: none;
		color: var(--text-color);
	}

	h2 {
		font-size: 1.5rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.category-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 